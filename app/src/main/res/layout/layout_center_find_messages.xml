<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent" android:layout_width="match_parent">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/how_to_post"
            android:backgroundTint="@android:color/transparent"
            android:text="Find Messages"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="@color/register"
            android:background="@drawable/grey_border_bottom"/>

        <TextView
            android:id="@+id/how_to_post_description"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/black"
            android:background="@drawable/grey_border_bottom"
            android:layout_below="@+id/how_to_post"
            android:text="When clicking a rental request button, a short message expressing your interests in the item will be automatically sent to the lender."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/steps"
            android:layout_marginTop="15dp"
            android:backgroundTint="@android:color/transparent"
            android:text="Steps"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_below="@id/how_to_post_description"
            android:textColor="@color/register"
            android:background="@drawable/grey_border_bottom"/>

        <TextView
            android:id="@+id/bullet1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/black"

            android:background="@drawable/grey_border_bottom"
            android:layout_below="@+id/steps"
            android:text="1. "/>

        <TextView
            android:id="@+id/step1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/black"
            android:background="@drawable/grey_border_bottom"
            android:layout_toRightOf="@id/bullet1"
            android:layout_below="@+id/steps"
            android:text="Open the Rent.To app, then tap Messenger Icon"/>

        <ImageView
            android:id="@+id/step_image1"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_below="@id/step1"
            android:layout_marginTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/messagestep1" />

        <TextView
            android:id="@+id/step2"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/black"
            android:background="@drawable/grey_border_bottom"
            android:layout_below="@+id/step_image1"
            android:text="2. Choose who you want to talk to "/>

        <ImageView
            android:id="@+id/step_image2"
            android:layout_width="wrap_content"
            android:layout_height="565dp"
            android:layout_below="@id/step2"
            android:layout_marginTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/messagestep2resized" />

        <TextView
            android:id="@+id/step3"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/black"
            android:background="@drawable/grey_border_bottom"
            android:layout_below="@+id/step_image2"
            android:text="3. Go ahead and talk to the person you wish to talk to"/>

        <ImageView
            android:id="@+id/step_image3"
            android:layout_width="wrap_content"
            android:layout_height="456dp"
            android:layout_below="@id/step3"
            android:layout_marginTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/messagestep3resized" />

    </RelativeLayout>




</ScrollView>