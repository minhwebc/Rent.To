<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent" android:layout_width="match_parent">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/how_to_post"
            android:backgroundTint="@android:color/transparent"
            android:text="About ratings on Rent.To"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="@color/register"
            android:background="@drawable/grey_border_bottom"/>

        <TextView
            android:id="@+id/how_to_post_description"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/black"
            android:background="@drawable/grey_border_bottom"
            android:layout_below="@+id/how_to_post"
            android:text="A rating on Rent.To is the average number of gold stars someone has been rated. You can assume whether they are trustworthy or not by looking at their average rating and number of posts. "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/steps"
            android:layout_marginTop="15dp"
            android:backgroundTint="@android:color/transparent"
            android:text="Steps"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_below="@id/how_to_post_description"
            android:textColor="@color/register"
            android:background="@drawable/grey_border_bottom"/>

        <TextView
            android:id="@+id/bullet1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/black"

            android:background="@drawable/grey_border_bottom"
            android:layout_below="@+id/steps"
            android:text="1. "/>

        <TextView
            android:id="@+id/step1"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/black"
            android:background="@drawable/grey_border_bottom"
            android:layout_toRightOf="@id/bullet1"
            android:layout_below="@+id/steps"
            android:text="Click on the item you are interested"/>

        <ImageView
            android:id="@+id/step_image1"
            android:layout_width="wrap_content"
            android:layout_height="376dp"
            android:layout_below="@id/step1"
            android:layout_marginTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ratingstep1" />

        <TextView
            android:id="@+id/step2"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/black"
            android:background="@drawable/grey_border_bottom"
            android:layout_below="@+id/step_image1"
            android:text="2. Click on the profile picture to go to the lender's profile   "/>

        <ImageView
            android:id="@+id/step_image2"
            android:layout_width="wrap_content"
            android:layout_height="411dp"
            android:layout_below="@id/step2"
            android:layout_marginTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ratingstep2" />

        <TextView
            android:id="@+id/step3"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/black"
            android:background="@drawable/grey_border_bottom"
            android:layout_below="@+id/step_image2"
            android:text="3. You can see the ratings below the lender's website"/>

        <ImageView
            android:id="@+id/step_image3"
            android:layout_width="wrap_content"
            android:layout_height="172dp"
            android:layout_below="@id/step3"
            android:layout_marginTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ratingstep3" />

    </RelativeLayout>




</ScrollView>